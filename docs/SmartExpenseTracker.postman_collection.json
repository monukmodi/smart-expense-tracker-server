{
  "info": {
    "name": "Smart Expense Tracker API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for health, auth, transactions, and prediction endpoints."
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  pm.collectionVariables.set('token', json.token);",
              "  pm.collectionVariables.set('userId', json.user.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Transactions - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/transactions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions"]
        }
      }
    },
    {
      "name": "Transactions - List (paged)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/transactions?page={{page}}&size={{size}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions"],
          "query": [
            { "key": "page", "value": "{{page}}" },
            { "key": "size", "value": "{{size}}" }
          ]
        }
      }
    },
    {
      "name": "Transactions - List (limit/offset)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/transactions?limit={{limit}}&offset={{offset}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions"],
          "query": [
            { "key": "limit", "value": "{{limit}}" },
            { "key": "offset", "value": "{{offset}}" }
          ]
        }
      }
    },
    {
      "name": "Transactions - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 199.99,\n  \"category\": \"shopping\",\n  \"description\": \"Headphones\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/transactions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions"]
        }
      }
    },
    {
      "name": "Transactions - Update (PUT /:id)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 150\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/transactions/{{txId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions", "{{txId}}"]
        }
      }
    },
    {
      "name": "Transactions - Delete (DELETE /:id)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/transactions/{{txId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "transactions", "{{txId}}"]
        }
      }
    },
    {
      "name": "Predict - Heuristic (free)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"days\": 90\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/predict",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "predict"]
        }
      }
    },
    {
      "name": "Predict - OpenAI (optional)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"days\": 90,\n  \"useOpenAI\": true\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/predict",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "predict"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "txId", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "page", "value": "1" },
    { "key": "size", "value": "10" },
    { "key": "limit", "value": "10" },
    { "key": "offset", "value": "0" }
  ]
}
